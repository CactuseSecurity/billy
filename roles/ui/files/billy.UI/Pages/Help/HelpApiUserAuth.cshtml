@page "/help/API/userAuth"
@model billy.Ui.Pages.Help.MainModel
@{
    Layout = "HelpLayout";
}
@section sidebar{
    @{ 
        await Html.RenderPartialAsync("HelpAPISidebar.cshtml"); 
    }
}
@using billy.Config.Api
@using billy.Config.File
@using System.Threading.Tasks
@using billy.Api.Client
@using billy.Api.Data
@using billy.Middleware.Client
@using Microsoft.IdentityModel.Tokens
@using billy.Middleware.RequestParameters
@inject UserConfig userConfig

<div class="p-2">
    <h3>@userConfig.GetText("api_user_mgmt_head")</h3>
    @(Html.Raw(userConfig.GetText("umgmt_api_explain")))
    <a target="_blank" href="@ConfigFile.MiddlewareServerUri/swagger">@ConfigFile.MiddlewareServerUri/swagger</a>
    <br>
    @(Html.Raw(userConfig.GetText("umgmt_api_explain2")))
</div>
